package assignments;

import java.util.Scanner;

public class Calculator {

	public static void main(String[] args) {
		int a=10,b=23,choice=0;
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter your choice: ");
		System.out.println("Press enter for additon: ");
		System.out.println("Press enter for subtraction: ");
		System.out.println("Press enter for multiplication: ");
		System.out.println("Press enter for division: ");
		do {
			choice=sc.nextInt();
			switch(choice) {
			case 1:
				System.out.println("The addition of a and b are: "+(a+b));
				
			case 2:
				System.out.println("The substraction of a and b are: "+(a-b));
				
			case 3:
				System.out.println("The product of two numbers a and b: "+(a*b));
				
			case 4:
				if(b!=0) {
					System.out.println("Second value cannot be zero.");
				}
				else {
					System.out.println("The division of a and b is: "+(float)(a/b));
				}
			}
			
				
			
		}while(choice!=3);

	}

}
